 root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

# Specific file types
[*.{yml,yaml,tml,toml}]
indent_style = space
indent_size = 2

[*go]
indent_style = tab
indent_size = 4
